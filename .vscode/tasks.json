{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "debug-send: default",
      "type": "shell",
      "command": "${env:HOME}/dev/scripts/debug/debug-send",
      "args": [
        "${input:debugCommand}",
        "5678"
      ],
      "options": {
        "env": {
          // "PROJECT_NAME": "py-ia-rom-logger",
          "PROJECT_NAME": "${env:PROJECT_NAME}",
          "LOG_DIR": "${env:LOG_DIR}",
          "CACHE_DIR": "${env:CACHE_DIR}",
          "PYTHONPATH": "${env:PYTHONPATH}",
        }
      },
      // Accepts a list of strings or objects that specify problem matchers (errors, warnings) for VS Code to interpret the command output.
      // Examples of variables: names of existing problem matchers in VS Code, such as "$tsc", "$eslint", "$python".
      // This allows VS Code to recognize and display error or warning messages (for example, from a linter or tests) when running the task.
      // Example: "$python" would activate the Python error parser.
      "problemMatcher": [
        // "$python",
        // "$eslint-compact",
        // "$tsc"
      ],
      "presentation": {
        "reveal": "never",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "debug-send: custom",
      "type": "shell",
      "command": "${env:HOME}/dev/scripts/debug/debug-send",
      "args": [
        "${input:poeCommand}",
        "5678"
      ],
      "options": {
        "env": {
          // "PROJECT_NAME": "py-ia-rom-logger",
          "PROJECT_NAME": "${env:PROJECT_NAME}",
          "LOG_DIR": "${env:LOG_DIR}",
          "CACHE_DIR": "${env:CACHE_DIR}",
          "PYTHONPATH": "${env:PYTHONPATH}",
        }
      },
      "problemMatcher": [],
      "presentation": {
        "close": false,
        "reveal": "silent",
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true,
      }
    }
  ],
  "inputs": [
    {
      "id": "debugCommand",
      "type":"pickString",
      "description": "Command to debug (e.g., -m poethepoet cli basic)",
      "default": "poe cli",
      "options": [
        {
          "label": "poe cli",
          "value": "-m poethepoet cli basic"
        },
        {
          "label": "pytest",
          "value": "-m poethepoet test"
        }
      ]
    },
    {
      "id": "poeCommand",
      "type": "promptString",
      "description": "Command to run (e.g., cli basic)",
      "default": "-m poethepoet cli basic"
    }
  ]
}
